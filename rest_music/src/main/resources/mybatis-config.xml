<?xml version="1.0" encoding="UTF-8"?>
<!DOCTYPE configuration
  PUBLIC "-//mybatis.org//DTD Config 3.0//EN"
  "https://mybatis.org/dtd/mybatis-3-config.dtd">
  <configuration>
    <settings>
    <!-- 테이블 컬럼 이름의 밑줄(underscore)을 자바 클래스의 카멜 표기법 필드로 변환. -->
      <setting name="mapUnderscoreToCamelCase" value="true" />
    </settings>
    <!-- 매퍼 XML 파일에서 resultType 속성을 설정할 때 간단히 하기 위해서-->
    <typeAliases>
        <typeAlias type="com.itwill.rest.dto.song.SongDetailDto" alias="SongDetail" />
        <typeAlias type="com.itwill.rest.dto.comment.CommentItemDto" alias="CommentItemDto" />
        <typeAlias type="com.itwill.rest.repository.Comment" alias="Comment" />
        <typeAlias type="com.itwill.rest.repository.PlayList" alias="PlayList" />
        <typeAlias type="com.itwill.rest.dto.playlists.PlaylistFirstAlbumImgDto" alias="PlaylistFirstAlbumImgDto" />
    </typeAliases>
  </configuration>